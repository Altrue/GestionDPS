<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_fiche_bilan"
    tools:context="i4a.epsi.gestiondps.MainMenuActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBackground">

    <TextView
        android:id="@+id/ficheBilan_textview1"
        android:text="GESTION DPS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/ficheBilanTitre_textview2"
        android:text="FICHE BILAN"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/activityFicheBilan_buttonSave"
            android:layout_height="wrap_content"
            android:text="Sauvegarder"
            android:background="@color/colorSauvegarderBackground"
            android:layout_width="fill_parent"
            android:textColor="@color/colorSauvegarderText"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/activityFicheBilan_buttonLoad"
            android:layout_height="wrap_content"
            android:text="Charger"
            android:background="@color/colorChargerBackground"
            android:layout_width="fill_parent"
            android:textColor="@color/colorChargerText"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/ficheBilanTitre_textview_temporaire"
        android:text="TODO : Interface Fiche Bilan ici"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/activityFicheBilan_buttonSaveBottom"
            android:layout_height="wrap_content"
            android:text="Sauvegarder"
            android:background="@color/colorSauvegarderBackground"
            android:layout_width="fill_parent"
            android:textColor="@color/colorSauvegarderText"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/activityFicheBilan_buttonLoadBottom"
            android:layout_height="wrap_content"
            android:text="Charger"
            android:background="@color/colorChargerBackground"
            android:layout_width="fill_parent"
            android:textColor="@color/colorChargerText"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

</LinearLayout>
